<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="MultiGameHelpTitle">
        <item name="android:textSize">@dimen/multi_help_title_font</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffff99</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:background">@drawable/bg_hint_text_header</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="MultiGameHelpContent">
        <item name="android:textSize">@dimen/multi_help_content_font</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
